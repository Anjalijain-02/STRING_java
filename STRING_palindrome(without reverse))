import java.util.*;
public class Main
{
    public static boolean palindrome(String str)
    {
       int i=0;
       int j=str.length()-1;
            while(i<j)
        {
            if(str.charAt(i)!=str.charAt(j))
                {
                    return false;
                }
            
                    i++;
                    j--;
         }
            
            
        
        return true;
    }
   
	public static void main(String[] args) {
	    Scanner sc = new Scanner(System.in);
	    String str= sc.next();
	   boolean t=palindrome(str);
	   System.out.println(t);
	   

	}
}
